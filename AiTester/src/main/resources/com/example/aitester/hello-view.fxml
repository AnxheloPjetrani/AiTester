<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aitester.HelloController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Enter URL:"/>
    <TextField fx:id="urlField" promptText="https://example.com" />
    <Button text="Test &amp; Get DOM" onAction="#onTestUrlClick"/>
    <Label fx:id="resultLabel"/>
    <TextArea fx:id="domTextArea" prefHeight="300" prefWidth="350" wrapText="true"/>
</VBox>
